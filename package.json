{
  "name": "bat-tools",
	"displayName": "Bat Tools",
	"description": "Provide outline v0.0.1.3",
  "version": "0.0.1",
  "publisher": "toramameseven",
  "author": {
    "name": "toramame-seven"
  },
  "icon": "images/battools.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.71.0"
  },
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
		"bat",
    "batch",
    "outline"
	],
  "repository": {
    "type": "git",
    "url": "https://github.com/toramameseven/bat-tools.git"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "prepackage": "npm run pretest",
    "package": "vsce package --target win32-x64",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "clean": "rimraf out",
    "preesbuild-base": "npm run clean",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "license": "npx license-report --config=./license-report-config.json > usedModules.md",
    "test-compile": "tsc -p ./"
  },
  "activationEvents": [
    "onLanguage:bat"
  ],
  "main": "./out/extension.js",
  "devDependencies": {
    "@types/node": "^18.7.23",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "esbuild": "^0.15.13",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  }
}
